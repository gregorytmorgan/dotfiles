#
# aliases
#

alias back='cd ~-'
alias cp='cp -i'
alias du='du -sh'
alias l.='ls -dal .*'  
alias la='ls -Alh'
alias ll='ls -lFh'
alias mv='mv -i'
alias rm='rm -i'
alias ntop='echo "Use iftop for remote hosts, nethogs for apps."'

# -nw = no X, 
alias emacs='emacs -nw'
alias xemacs='\emacs'

# end file